<h1>Create a New Profile </h1>

<% if flash[:messages] %>
  <% flash[:messages].each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <div class="field">
    <%= f.text_field :username %>
  </div>
  <%= f.label :password %>
  <div class="field">
    <%= f.password_field :password %>
  </div>
  <%= f.label :password_confirmation %>
  <div class="field">
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit 'Create User', {class: 'ui medium pink button inverted'} %>
<% end %>
