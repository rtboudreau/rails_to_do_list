
  <div class="text-center">
    <p class="text-center text-capitalize"><%=@user.username%>'s <%= pluralize(@user.todo_lists.count, 'List') %></p>
      <% @user.todo_lists.each do |t| %>
          <div class="index_row clearfix">
            <h2 class="todo_list_title"><%=link_to t.title, todo_list_path(t)%></h2>
            <p class="todo_list_sub_title"><%= t.description %></p>
          </div>
      <% end %>
  </div>

  <div class="links">
    <%= link_to "New To do List", new_todo_list_path %>
  </div>
