</div>
<div class="field mb-3">
   <%= form.label :description, class: "mb-3" %>
   <%= form.text_area :description, :required => true %>
</div>
<div class="actions">
   <button type="submit" class="btn btn-lg btn-todo btn-block btn-login text-uppercase font-weight-bold mb-2">Submit</button>
</div>
<% end %>
